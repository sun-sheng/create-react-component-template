{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./lib",
    // "module": "commonjs", // unit test
    "module": "esnext",
    "target": "es6",
    "lib": [
      "es6",
      "dom"
    ],
    "paths": {
      "@/*": ["src/*"]
    },
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "removeComments": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "include": [
    "./src/**/*",
    "./index.d.ts"
  ],
  "awesomeTypescriptLoaderOptions": {
    "transpileOnly": true
  }
}